@*@model IEnumerable<ESCOM_FLEET_SYSTEM.Models.FleetCustodian>*@
@model PaginatedList<ESCOM_FLEET_SYSTEM.Models.FleetCustodian>

@{
    ViewData["Title"] = "Index";
}

<p>
    <a asp-action="Create" class="btn btn-sm btn-primary rounded-0 text-uppercase"><i class="fas fa-plus-circle"></i> New FleetCustodian</a>
</p>

<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            || <input type="text" name="SearchString" value="@ViewData["CurrentFilter"] " placeholder="Search" />
            <input type="submit" value="Search" class="bg-dark btn btn-sm btn-outline-success btn-sm my-0" /> |
            @*<a asp-action="Index">Back to Full List</a>*@
        </p>
    </div>
</form>
@*<table class="table">
    <thead>*@
<table class="table table-sm">
    <thead class="table-light">
        <tr>
            <th>
                @*@Html.DisplayNameFor(model => model.COFNumber)*@
                COFNumber
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.LicenceNumber)*@
                LicenceNumber
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.NumberPlate)*@
                NumberPlate
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.StationName)*@
                StationName
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.DepartmentName)*@
                DepartmentName
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.CollectedOn)*@
                CollectedOn
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.ReturnedOn)*@
                ReturnedOn
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.COFNumber.COFNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LicenceNumber.Department)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumberPlate.Mileage)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StationName.StationName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DepartmentName.Comment)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CollectedOn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReturnedOn)
                </td>
                <td>
                    <a class="btn btn-outline-success btn-rounded btn-sm my-0" asp-action="Edit" asp-route-id="@item.FleetCustodianId"><i class="fas fa-edit"></i>UPDATE</a> |
                    <a class="btn btn-outline-info btn-rounded btn-sm my-0" asp-action="Details" asp-route-id="@item.FleetCustodianId"><i class="fas fa-info-circle"></i>DETAILS</a> |
                    <a class="btn btn-outline-danger btn-rounded btn-sm my-0" asp-action="Delete" asp-route-id="@item.FleetCustodianId"><i class="fas fa-trash-alt"></i>DELETE</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}

<a asp-action="Index"
   asp-route-sortOrder="@ViewData["CurrentSort"]"
   asp-route-pageNumber="@(Model.PageIndex - 1)"
   asp-route-currentFilter="@ViewData["CurrentFilter"]"
   class=" bg-light btn btn-sm btn-outline-success @prevDisabled">
    Previous
</a>
<a asp-action="Index"
   asp-route-sortOrder="@ViewData["CurrentSort"]"
   asp-route-pageNumber="@(Model.PageIndex + 1)"
   asp-route-currentFilter="@ViewData["CurrentFilter"]"
   class="bg-light btn btn-sm btn-outline-success @nextDisabled">
    Next
</a>